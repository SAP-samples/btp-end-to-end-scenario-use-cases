{
  "name": "incident-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap-cloud-sdk/util": "^4",
    "@sap/ams": "^3",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "cf-nodejs-logging-support": "7.5.0-beta.0",
    "express": "^4",
    "hdb": "latest"
  },
  "devDependencies": {
    "@cap-js/cds-types": "latest",
    "@cap-js/sqlite": "^2",
    "@sap/ams-dev": "^2",
    "@sap/cds-dk": "^9",
    "@sap/ux-specification": "^1.120.17",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "node ${NODE_ARGS} ./node_modules/@sap/cds/bin/serve",
    "watch-incidents": "cds watch --open incidents/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy incident-management --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "sapux": [
    "app/incidents",
    "app/incidents"
  ],
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": {
          "kind": "ias"
        }
      },
      "OP_API_BUSINESS_PARTNER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/OP_API_BUSINESS_PARTNER_SRV",
        "[production]": {
          "credentials": {
            "destination": "incidents-api-access",
            "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          }
        }
      },
      "destinations": true,
      "html5-runtime": true,
      "workzone": true
    }
  }
}
