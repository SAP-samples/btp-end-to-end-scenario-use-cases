{
  "name": "incident-management",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@cap-js/telemetry": ">=0",
    "@grpc/grpc-js": "^1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "0.57.2",
    "@opentelemetry/exporter-metrics-otlp-grpc": "0.57.2",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.57.2",
    "@opentelemetry/host-metrics": "^0.36",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap-cloud-sdk/util": "^4",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "cf-nodejs-logging-support": "^7.4.0",
    "express": "^4",
    "hdb": "latest",
    "@sap/fesr-to-otel-js": "latest",
    "@sap/xotel-agent-ext-js": "latest"
  },
  "devDependencies": {
    "@cap-js/cds-types": "latest",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/ux-specification": "^1.120.17",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-incidents": "cds watch --open incidents/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy incident-management --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "sapux": [
    "app/incidents",
    "app/incidents"
  ],
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa",
        "telemetry": {
          "kind": "to-cloud-logging"
        }
      },
      "OP_API_BUSINESS_PARTNER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/OP_API_BUSINESS_PARTNER_SRV",
         "[production]": {
          "credentials": {
            "destination": "incidents-api-access",
            "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          }
        }
      }
    }
  }
}